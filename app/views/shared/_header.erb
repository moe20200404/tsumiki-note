<header class='top-page-header'>
  <div class='logo-contents'>
    <%= link_to image_tag("logo.png", class:"icon"), "/" %>
  </div>
  <div class='nav'>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <li class='list-right'><%= link_to 'おたより', root_path, class: "menu-list" %></li>
        <li class='list-right'><%= link_to '成長記録', user_path(id: current_user.id), class: "menu-list" %></li>
        <li class='list-right'><%= link_to current_user.name, user_path(id: current_user.id), class: "user-name" %></li>
        <li class='list-right'><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
        <li class='list-right'><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li class='list-right'><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</header>