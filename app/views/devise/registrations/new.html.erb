<%= render "shared/header"%>

<h2>Sign up</h2>

<%= form_with model: @user, url: registration_path(resource_name), id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: @user %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="feild">
    <%= f.label :authority_id %><br />
    <%= f.text_field :authority_id %>
  </div>

  <div class="feild">
    <%= f.label :postal_code %><br />
    <%= f.number_field :postal_code %>
  </div>

  <div class="feild">
    <%= f.label :pref %><br />
    <%= f.text_field :pref %>
  </div>

  <div class="feild">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </div>

  <div class="feild">
    <%= f.label :town %><br />
    <%= f.text_field :town %>
  </div>

  <div class="feild">
    <%= f.label :building %><br />
    <%= f.text_field :building %>
  </div>

  <div class="feild">
    <%= f.label :phone_number %><br />
    <%= f.number_field :phone_number %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
<%= render "shared/footer"%>